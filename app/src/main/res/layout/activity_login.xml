<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.baicaohall.LoginActivity">


    <ImageView
        android:layout_marginTop="132px"
        android:layout_width="280px"
        android:layout_height="280px"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105px">

        <ImageView
            android:id="@+id/login_phone_img"
            android:layout_width="40px"
            android:layout_height="46px"
            android:layout_marginLeft="97px"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/login_phone_eit"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/login_phone_img"
            android:background="@null"
            android:hint="输入手机号" />

        <view
            android:layout_width="570px"
            android:layout_height="2px"
            android:layout_below="@id/login_phone_img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:background="#999999"></view>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68px">

        <ImageView
            android:id="@+id/login_pwd_img"
            android:layout_width="40px"
            android:layout_height="46px"
            android:layout_marginLeft="97px"
            android:src="@mipmap/pwd" />

        <EditText
            android:id="@+id/rlogin_pwd_eit"
            android:layout_width="wrap_content"
            android:layout_height="45px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/login_pwd_img"
            android:background="@null"
            android:hint="输入密码" />

        <view
            android:layout_width="570px"
            android:layout_height="2px"
            android:layout_below="@id/login_pwd_img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:background="#999999"></view>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="167px"
        android:background="@drawable/oval">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="36px" />

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
